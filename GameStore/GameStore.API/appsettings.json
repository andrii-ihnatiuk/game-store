{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=gamestore;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "MongoDbOptions": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "northwind"
  },
  "PaymentOptions": {
    "Visa": {
      "ApiUrl": "https://localhost:5001/api/payments/visa"
    },
    "IBox": {
      "ApiUrl": "https://localhost:5001/api/payments/ibox"
    },
    "Taxes": {
      "DefaultTax": 20
    }
  },
  "IdentityOptions": {
    "Password": {
      "RequireDigit": false,
      "RequireLowercase": false,
      "RequireNonAlphanumeric": false,
      "RequireUppercase": false,
      "RequiredLength": 4,
      "RequiredUniqueChars": 1
    }
  },
  "JwtOptions": {
    "Issuer": "game-store-api",
    "Audience": "game-store-client",
    "SecretKey": "a-very-long-and-secure-key"
  },
  "AuthApiOptions": {
    "BaseApiUrl": "https://localhost:5037/api/",
    "LoginApiUrl": "auth"
  },
  "AllowedHosts": "*"
}
